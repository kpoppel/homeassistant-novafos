{
    "manifest_version": 3,
    "name": "HomeAssistant Novafos Token",
    "description": "Grab Novafos access token for Home Assistant",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128":"images/icon128.png"
        },
        "default_width": 400,
        "default_height": 400
    },    
    "permissions": [
      "webRequest",
      "storage",
      "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>"
    ],    
    "background": {
      "service_worker": "background.js"
    }
  }