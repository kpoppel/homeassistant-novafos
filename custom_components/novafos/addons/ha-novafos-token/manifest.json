{
  "name": "HomeAssistant Novafos Token Inspector",
  "description": "Retrieve Bearer token from Novafos to inject into Home Assisant and the Novafos plugin.",
  "version": "1.0.0",
  "permissions": [
    "storage"
  ],
  "manifest_version": 3,
  "devtools_page": "devtools/devtools.html",

  "XX_background": {
    "XX_service_worker": "panel/background.js",
    "XX_type": "module"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
